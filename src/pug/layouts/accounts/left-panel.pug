mixin leftpanel(value)
    .accounts-contain__left.js-left-sticky
        h2 My Account
        ul
            li
                a(href="accounts-personal.html" class=(value === "profile" ? 'active' : ''))
                    i.icon-account
                    | Profile
            li
                a(href="accounts-orders.html" class=(value === "orders" ? 'active' : ''))
                    i.icon-myorders
                    | My Orders
            li
                a(href="accounts-address.html" class=(value === "address" ? 'active' : ''))
                    i.icon-address
                    | Manage Address
            li
                a(href="accounts-gifts.html" class=(value === "coupons" ? 'active' : ''))
                    i.icon-coupon
                    | Gift Coupons & Cards
            li
                a(href="#" class=(value === "privilege" ? 'active' : ''))
                    i.icon-privilege
                    | Privilege Club
            li
                a(href="accounts-size.html" class=(value === "size" ? 'active' : ''))
                    i.icon-sizechart
                    | Size Profile