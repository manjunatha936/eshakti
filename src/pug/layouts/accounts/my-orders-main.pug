.accounts-contain
    .container.d-lg-flex.justify-content-end.position-relative
        include left-panel.pug
        +leftpanel('orders')

        .accounts-contain__right.acc-orders
            .acc-orders__card
                h2 Current Order
                .acc-orders__cardbox
                    .acc-orders__cardhead
                        p Order number - 
                            span #1338681
                        p Total price - 
                            span $303.0
                        p Placed on - 
                            span 4th Apr 2020
                        p
                            a(href="#")
                                i.icon-help
                                label Help

                    .acc-orders__progress
                        .acc-orders__progressbar(data-value="75")
                            .status
                        
